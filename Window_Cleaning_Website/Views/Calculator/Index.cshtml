@{
    ViewData["Title"] = "Pricing Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!-- Inherits layout -->
}

@section Hero {
    <div class="hero">
        <img src="~/images/calculator-hero.jpg" alt="Calculator Hero Image" class="hero-img">
        <div class="hero-text">
            <h1>Calculate Your Cleaning Cost</h1>
            <p>Get an estimate for your window or trash bin cleaning services.</p>
        </div>
    </div>
}

<div class="container text-center mt-5">
    <h2>Cleaning Service Calculator</h2>
    <p>Enter the number of windows and trash bins you need cleaned and get an instant price estimate.</p>

    <!-- Window Cleaning Calculator -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Window Cleaning</h3>

            <label for="smallWindows">Small Windows ($5 each):</label>
            <input type="number" id="smallWindows" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <label for="mediumWindows" class="mt-3">Medium Windows ($8 each):</label>
            <input type="number" id="mediumWindows" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <label for="largeWindows" class="mt-3">Large Windows ($12 each):</label>
            <input type="number" id="largeWindows" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <!-- Additional Services -->
            <h4 class="mt-4">Additional Services</h4>

            <div class="form-check">
                <input type="checkbox" id="screenCleaning" class="form-check-input">
                <label class="form-check-label" for="screenCleaning">Screen Cleaning ($3 per window)</label>
            </div>

            <div class="form-check">
                <input type="checkbox" id="stainRemoval" class="form-check-input">
                <label class="form-check-label" for="stainRemoval">Hard Water Stain Removal ($15 per window)</label>
            </div>

            <div class="form-check">
                <input type="checkbox" id="fullInteriorExterior" class="form-check-input">
                <label class="form-check-label" for="fullInteriorExterior">Full Interior & Exterior Cleaning (+$5 per window)</label>
            </div>

            <button id="calculateWindows" class="btn btn-primary mt-3">Calculate Window Cleaning</button>
            
            <label for="totalWindows" class="mt-3">Total Cost:</label>
            <input type="text" id="totalWindows" class="form-control" readonly>
        </div>
    </div>

    <!-- Trash Bin Cleaning Calculator -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h3>Trash Bin Cleaning</h3>

            <label for="oneTimeBins">One-Time Cleaning ($15 per bin):</label>
            <input type="number" id="oneTimeBins" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <label for="monthlyBins" class="mt-3">Monthly Plan ($10 per bin):</label>
            <input type="number" id="monthlyBins" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <label for="biWeeklyBins" class="mt-3">Bi-Weekly Plan ($8 per bin):</label>
            <input type="number" id="biWeeklyBins" class="form-control" placeholder="Enter quantity" min="0" oninput="validateInput(this)">

            <button id="calculateBins" class="btn btn-primary mt-3">Calculate Trash Bin Cleaning</button>
            
            <label for="totalBins" class="mt-3">Total Cost:</label>
            <input type="text" id="totalBins" class="form-control" readonly>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-4">Back to Home</a>
</div>

<script src="~/js/calculator.js"></script>
